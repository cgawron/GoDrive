<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>StartPageServlet</servlet-name>
    <servlet-class>de.cgawron.godrive.StartPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StartPageServlet</servlet-name>
    <url-pattern>/start</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FileServlet</servlet-name>
    <servlet-class>de.cgawron.godrive.FileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileServlet</servlet-name>
    <url-pattern>/svc</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>de.cgawron.godrive.UserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AboutServlet</servlet-name>
    <servlet-class>de.cgawron.godrive.AboutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AboutServlet</servlet-name>
    <url-pattern>/about</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>start</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>REST Interface to SGF tree</description>
     <servlet-name>SGFServlet</servlet-name>
    <servlet-class>de.cgawron.godrive.SGFServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SGFServlet</servlet-name>
    <url-pattern>/sgf</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SGFServlet</servlet-name>
    <url-pattern>/sgf/info</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>SGFServlet</servlet-name>
    <url-pattern>/sgf/node/*</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>StartPageServlet</servlet-name>
    	<url-pattern>
    	/view/*</url-pattern>
    </servlet-mapping>
</web-app>